<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <CalendarView
        android:layout_width="393dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-60dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Route A"
        android:textSize="16dp"
        android:textStyle="bold"
        android:shadowRadius = "2"
        android:textColorHint="#F44336" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Route B"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColorHint="#3D89F6" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Route C"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColorHint="#9B27AF" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Route D"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColorHint="#FF9800" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:textColorHint="#009587"
        android:hint="Route E"/>


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="-100dp"
        app:srcCompat="@drawable/img_3184" />
</LinearLayout>