<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menupage"
    tools:ignore="MissingConstraints"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="0dp"
            android:layout_height="95dp"
            android:layout_weight="1"
            android:layout_gravity="start"
            android:src="@drawable/logo"
            />

        <LinearLayout
            android:layout_width="95dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:clickable="true"
                android:id="@id/ProfileMenuBtn"
                android:layout_width="79dp"
                android:layout_height="79dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_face_24"
                />

            <TextView
                android:layout_width="44dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:text="Profile"
                android:textColor="#a1a1a1"
                android:textSize="12dp"
                android:textStyle="bold"
                />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="316dp"
            android:layout_height="39dp"
            android:layout_gravity="center"
            android:text="Daily Activity Log"
            android:textColor="#3d5eb3"
            android:textSize="30dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="49dp"
            tools:layout_editor_absoluteY="161dp"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="71dp"
            android:layout_gravity="left|top"
            android:src="@drawable/baseline_delete_outline_24" />
    <TextView
        android:clickable="true"
        android:id="@id/RubbishMenuBtn"
        android:layout_width="316dp"
        android:layout_height="39dp"
        android:text="Rubbish pick up"
        android:textColor="#72B953"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="161dp" />



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="71dp"
            android:layout_gravity="left|top"
            android:src="@drawable/baseline_help_outline_24" />
    <TextView
        android:clickable="true"
        android:id="@id/CameraBtn"
        android:layout_width="316dp"
        android:layout_height="39dp"
        android:text="Bin information"
        android:textColor="#72B953"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="161dp"

        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="71dp"
            android:layout_gravity="start|top"
            android:src="@drawable/baseline_group_24" />

    <TextView
        android:layout_width="316dp"
        android:layout_height="39dp"
        android:text="@string/friends"
        android:textColor="#72B953"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="161dp"

        />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="71dp"
            android:layout_gravity="start|top"
            android:src="@drawable/baseline_chat_bubble_outline_24" />
    <TextView
        android:layout_width="316dp"
        android:layout_height="39dp"
        android:text="Suggestions"
        android:textColor="#72B953"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="161dp"

        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="71dp"
            android:layout_gravity="start|top"
            android:src="@drawable/baseline_stars_24" />
        <TextView
            android:layout_width="316dp"
            android:layout_height="39dp"
            android:text="View Badges"
            android:textColor="#72B953"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            tools:layout_editor_absoluteX="49dp"
            tools:layout_editor_absoluteY="161dp"

            />
    </LinearLayout>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="143dp"
        android:layout_gravity="end|left"
        android:src="@drawable/img_3184" />
    <TextView
        android:layout_width="316dp"
        android:layout_height="39dp"
        android:layout_gravity="end|left"
        android:text="sponsor"
        android:textColor="#a1a1a1"
        android:textSize="12dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="161dp"
        />



</LinearLayout>